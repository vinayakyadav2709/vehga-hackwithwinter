<configuration>
    <input>
        <!-- Your cleaned network -->
        <net-file value="training_net.net.xml"/>
        
        <!-- The NEW route files generated by the python script -->
        <route-files value="trips.passenger.xml,trips.truck.xml,trips.bus.xml,trips.motorcycle.xml"/>
        
        <!-- Keep the visuals (Buildings) -->
        <additional-files value="osm.poly.xml.gz,vtypes.add.xml"/>
    </input>

    <time>
        <begin value="0"/>
        <end value="3600"/>
    </time>
    
    <processing>
        <!-- If a vehicle can't find a path, don't crash the sim, just ignore it -->
        <ignore-route-errors value="true"/>
    </processing>
</configuration>
